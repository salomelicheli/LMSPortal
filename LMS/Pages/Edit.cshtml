@page "{id:min(1)}"
@model LMS.Pages.EditModel
@{
}
<form method="post" class="mt-3">
    <input hidden asp-for="course.Id" />

    <div class="mb-3">
        <label for="courseName" class="form-label">Course Name</label>
        <input type="text" class="form-control" id="CourseName" asp-for="course.CourseName" required>
    </div>

    <div class="mb-3">
        <label for="courseDescription" class="form-label">Description</label>
        <textarea class="form-control" id="CourseDescription" asp-for="course.Description" rows="3" required></textarea>
    </div>
    <div class="mb-3">
        <label for="Credits" class="form-label">კურსის კრედიტები</label>
        <input type="number" class="form-control" id="Credits" asp-for="course.Credit" min="4" max="10" placeholder="კრედიტები (4-დან 10-მდე)" required>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button method="post" type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/AdminPage" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
